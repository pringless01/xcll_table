{
  "name": "xcll_table-extension",
  "version": "0.1.0",
  "private": true,
  "description": "Excel Helper MV3 extension - dev lint/test tooling",
  "scripts": {
    "lint": "eslint . --ext .js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest -i",
    "test:ci": "jest --runInBand --ci",
    "test:cov": "c8 -r text-summary -r lcov jest --runInBand",
    "audit": "npm audit --audit-level=high || exit 0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3"
  },
  "license": "MIT",
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/tests"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "coverageProvider": "v8",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    }
  }
}
